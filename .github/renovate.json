{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitsDisabled",
    "schedule:earlyMondays"
  ],
  "automerge": true,
  "labels": [
    "dependencies"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^src/main/java/org/jenkinsci/extension_indexer/SourceAndLibs.java"],
      "matchStrings": ["org.jenkins-ci.main:jenkins-core:(?<currentValue>.*?)\""],
      "depNameTemplate": "org.jenkins-ci.main:jenkins-core",
      "datasourceTemplate": "maven"
    }
  ],
  "rebaseWhen": "conflicted"
}
